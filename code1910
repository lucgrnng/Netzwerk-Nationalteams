V(Frankreich18)[V(Frankreich18)$club == "CHE"]$color <- "blue2"
V(Frankreich18)[V(Frankreich18)$club == "JUV"]$color <- "grey2"
V(Frankreich18)[V(Frankreich18)$club == "SEV"]$color <- "brown"
V(Frankreich18)[V(Frankreich18)$club == "MUN"]$color <- "purple"

plot(Frankreich18,
     layout=layout_with_kk,
     edge.arrow.size=.1,
     edge.color="grey",
     edge.curved=.2,
     asp=.5,
     edge.width=E(Frankreich18)$weight,
     vertex.size=V(Frankreich18)$value,
     vertex.label=V(Frankreich18)$number,
     vertex.frame.color="red3",
     vertex.label.family="Helvetica",
     vertex.label.color="black",
     vertex.size=degree(Frankreich18),
     main ="Gesamtvisualisierung Frankreich 2018 nach Vereinen und Value aufgeteilt")

# Visualisierungsparameter festlegen
par(mar=c(6,3,3,3)) 



par(mar=c(0,0,0,0)) 

```

